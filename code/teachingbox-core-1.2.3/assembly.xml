<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>bin</id>

	<formats>
		<format>zip</format>
		<format>tar.gz</format>
		<format>dir</format>
	</formats>

	<!-- Adds dependencies to distribution package under lib directory -->
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
			<unpack>false</unpack>
			<directoryMode>0755</directoryMode>
			<fileMode>0644</fileMode>
		</dependencySet>
		<dependencySet>
	        <outputDirectory>lib</outputDirectory>
	        <unpack>false</unpack>
	        <scope>system</scope>
			<directoryMode>0755</directoryMode>
			<fileMode>0644</fileMode>
	    </dependencySet>
	</dependencySets>

	<fileSets>
	    <fileSet>
            <directory>data</directory>
            <outputDirectory>data</outputDirectory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>
	    <fileSet>
            <directory>src</directory>
            <outputDirectory>src</outputDirectory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>
	    <fileSet>
            <directory>target/apidocs</directory>
            <outputDirectory>javadoc</outputDirectory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>
	    <fileSet>
            <directory>usercontrib</directory>
            <outputDirectory>usercontrib</outputDirectory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>
	    <fileSet>
            <directory>libs</directory>
            <outputDirectory>libs</outputDirectory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>

	
		<!-- adds jar package to the root directory of distribution package -->
		<fileSet>
			<directory>/home/tokic/workspace/amser-tb-sourceforge/target/checkout/target</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
			<directoryMode>0755</directoryMode>
			<fileMode>0644</fileMode>
		</fileSet>

		<fileSet>
			<directory>/home/tokic/workspace/amser-tb-sourceforge/target/checkout/src/main/scripts</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>*.bat</include>
			</includes>
			<filtered>true</filtered>
			<directoryMode>0755</directoryMode>
			<fileMode>0755</fileMode>
			<lineEnding>crlf</lineEnding>
		</fileSet>
		<fileSet>
			<directory>/home/tokic/workspace/amser-tb-sourceforge/target/checkout/src/main/scripts</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>*.sh</include>
			</includes>
			<filtered>true</filtered>
			<directoryMode>0755</directoryMode>
			<fileMode>0755</fileMode>
			<lineEnding>lf</lineEnding>
		</fileSet>
		<fileSet>
			<directory>/home/tokic/workspace/amser-tb-sourceforge/target/checkout</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>*.xml</include>
				<include>LICENSE</include>
				<include>manifest.txt</include>
			</includes>
			<filtered>true</filtered>
			<directoryMode>0644</directoryMode>
			<fileMode>0644</fileMode>
			<lineEnding>lf</lineEnding>
		</fileSet>

	</fileSets>
</assembly>
